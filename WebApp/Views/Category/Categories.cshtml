@model System.Collections.Generic.List<WebApp.ViewModels.CategoryVM>

@{
    ViewBag.Title = "Categories";
    Layout = "_Layout";
}

<h2 class="mb-5">Categories </h2>
<a class="btn btn-success mb-5" href="@Url.ActionLink("CreateCategory","Category")">
    Add new category
</a>
<div>

    <ul>
    @foreach (var category in Model)
    {
            <li class="d-flex flex-row gap-3 mb-2">
                <a class="text-body text-decoration-none" href="@Url.ActionLink("EditCategory", "Category", new { guid = category.Guid })">
                    @category.Name
                </a>
                <input type="color" class="form-control form-control-color" disabled value="@category.Color"> 
                <a class="btn btn-danger" href="@Url.ActionLink("DeleteCategory","Category",new {guid = category.Guid})">
                   delete 
                </a>
            </li>
    }

    </ul>
</div>
