@model Data.ViewModels.BudgetVM

<h1>Budget Details</h1>

<div class="row">
    <div class="col-md-8">
        <dl class="row">


            <dt class="col-sm-3">Sum</dt>
            <dd class="col-sm-9">@Model.Sum</dd>

            <dt class="col-sm-3">CategoryId</dt>
            <dd class="col-sm-9">@Model.CategoryId</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.CategoryName</dd>
        </dl>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-6">
        <h3>Budget Representation</h3>
        <canvas id="budgetPieChart"></canvas>
    </div>
    <div class="col-md-6">
        <h3>Status</h3>
        <p>The budget is currently <strong>FULL</strong>.</p>
    </div>
</div>

<a asp-action="Budgets" class="btn btn-primary">Back to List</a>

@section Scripts {
    <script>
        const budgetSum = @Model.Sum;

        const data = {
            labels: ['Remaining', 'User'],
            datasets: [{
                data: [budgetSum, 0], 
                backgroundColor: ['#007bff', '#dcdcdc'],
                borderWidth: 1
            }]
        };

        const config = {
            type: 'pie',
            data: data,
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    },
                    tooltip: {
                        callbacks: {
                            label: function (tooltipItem) {
                                return tooltipItem.label + ': ' + tooltipItem.raw + ' €';
                            }
                        }
                    }
                }
            }
        };

        const ctx = document.getElementById('budgetPieChart').getContext('2d');
        new Chart(ctx, config);
    </script>
}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>