<!-- WebApp/Views/Notifications/Index.cshtml -->
@model List<NotificationVM>

@{
    ViewBag.Title = "Notifications";
    Layout = "_Layout";
}

<h2 class="my-4">Notifications</h2>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <a href="@Url.Action("Index", "Notifications", new { unread = false })" class="btn btn-primary mb-3">Load All Notifications</a>
            @if (Model.Count == 0)
            {
                <div class="alert alert-info" role="alert">
                    You have no unread notifications.
                </div>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var notification in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @notification.Message
                            @if (notification.Read)
                            {
                                <span class="badge bg-primary badge-pill">Read</span>
                            }
                            else
                            {
                                <span class="badge bg-danger badge-pill">New</span>
                            }
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>
